{
  "name": "retail-pulse",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "rm-node-modules": "rm -rf node_modules yarn.lock package-lock.json",
    "prettify-files": "npx prettier --write 'src/**/*.{js,json}'",
    "ios-pod": "cd ios && rm -rf Pods && rm -rf Podfile.lock && xcodebuild clean && arch -x86_64 pod install",
    "cb-ios": "yarn install && yarn ios-pod && yarn ios --verbose",
    "clean-android": "cd android && ./gradlew clean",
    "cb-a": "yarn install && yarn clean-android && yarn run android",
    "pod-deep-remove": "rm -rf ~/Library/Caches/CocoaPods && rm -rf ios/Pods && rm -rf ~/Library/Developer/Xcode/DerivedData/* && cd ios && rm -rf Podfile.lock && pod deintegrate && pod setup && xcodebuild clean",
    "b-ios": "yarn install && cd ios && pod install && cd .. && yarn ios"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.17.3",
    "@react-native-firebase/app": "^14.8.0",
    "@react-native-firebase/auth": "^14.8.0",
    "@react-native-firebase/firestore": "^14.8.0",
    "@react-native-firebase/storage": "^14.8.0",
    "@react-native-masked-view/masked-view": "^0.2.6",
    "@react-navigation/native": "^6.0.10",
    "@react-navigation/stack": "^6.2.1",
    "exponential-backoff": "^3.1.0",
    "lodash": "^4.17.21",
    "lottie-ios": "^3.2.3",
    "lottie-react-native": "^5.0.1",
    "react": "17.0.2",
    "react-native": "0.68.1",
    "react-native-eva-icons": "^1.3.1",
    "react-native-fast-image": "^8.5.11",
    "react-native-fs": "^2.19.0",
    "react-native-gesture-handler": "^2.4.1",
    "react-native-image-crop-picker": "^0.37.3",
    "react-native-modal": "^13.0.1",
    "react-native-reanimated": "^2.8.0",
    "react-native-safe-area-context": "^4.2.4",
    "react-native-screens": "^3.13.1",
    "react-native-svg": "^12.3.0",
    "react-native-toast-notifications": "^3.2.3",
    "react-redux": "^8.0.1",
    "redux": "^4.2.0",
    "redux-thunk": "^2.4.1",
    "rn-placeholder": "^3.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-react": "^7.16.7",
    "@babel/runtime": "^7.17.9",
    "@bam.tech/react-native-make": "^3.0.3",
    "@react-native-community/eslint-config": "^3.0.1",
    "babel-jest": "^27.5.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.13.0",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.29.4",
    "jest": "^27.5.1",
    "metro-react-native-babel-preset": "^0.70.2",
    "react-test-renderer": "17.0.2",
    "reactotron-react-native": "^5.0.1",
    "reactotron-redux": "^3.1.3"
  },
  "jest": {
    "preset": "react-native"
  }
}
